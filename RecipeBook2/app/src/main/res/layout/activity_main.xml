<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irina.recipebook.MainActivity"
    android:background="@color/colorMainBackground">


    <Button
       android:background="@drawable/fish_"
        android:layout_width="120dp"
        android:id="@+id/fish"
        android:layout_weight="1"
        android:layout_below="@+id/soup"
        android:layout_alignParentStart="true"
        android:layout_height="170dp"
        android:onClick="onClick"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/second"
        android:background="@drawable/second_"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/salats"
        android:background="@drawable/salats_"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/desert"
        android:background="@drawable/deserts_"
        android:layout_below="@+id/fish"
        android:layout_alignParentStart="true"
        android:onClick="onClick"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/little_cakes"
        android:background="@drawable/little_cakes_"
        android:layout_below="@+id/vegitables"
        android:layout_alignStart="@+id/vegitables"
        android:layout_alignEnd="@+id/vegitables"
        android:onClick="onClick"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/vegitables"
        android:background="@drawable/vegitables_"
        android:layout_below="@+id/second"
        android:layout_alignStart="@+id/second"
        android:onClick="onClick"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/salting"
        android:background="@drawable/salting_"
        android:layout_below="@+id/salats"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/cakes"
        android:background="@drawable/cakes_"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/salting"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/soup"
        android:background="@drawable/soup_"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"/>

</RelativeLayout>
