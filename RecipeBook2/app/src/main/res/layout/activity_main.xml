<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irina.recipebook.MainActivity"
    android:background="@color/colorBackground">


    <Button
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button6"
        android:background="@drawable/soup_"
        android:layout_width="120dp"
        android:layout_height="170dp" />

    <Button
       android:background="@drawable/fish_"
        android:layout_width="120dp"
        android:id="@+id/button9"
        android:layout_weight="1"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_height="170dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/button7"
        android:background="@drawable/second_"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/button8"
        android:background="@drawable/salats_"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/button10"
        android:background="@drawable/deserts_"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true" />

    <Button

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/button12"
        android:background="@drawable/little_cakes_"
        android:layout_below="@+id/button11"
        android:layout_alignStart="@+id/button11"
        android:layout_alignEnd="@+id/button11" />

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/button11"
        android:background="@drawable/vegitables_"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/button13"
        android:background="@drawable/salting_"
        android:layout_below="@+id/button8"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:id="@+id/button14"
        android:background="@drawable/cakes_"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button13" />

</RelativeLayout>
